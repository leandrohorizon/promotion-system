<% if @product_category.errors.any? %>
  <h4>Não foi possível salvar, encontramos alguns erros</h4>
  <ul>
    <% @product_category.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @product_category do |f| %>
  <div>
    <%= f.label :name, 'Nome' %>
    <%= f.text_field :name %>
  </div>
  
  <div>
    <%= f.label :code, 'Código' %>
    <%= f.text_field :code %>
  </div>
  
  <%= f.submit %>
<% end %>